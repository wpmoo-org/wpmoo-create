{
  "name": "wpmoo-plugins/{{TEXT_DOMAIN}}",
  "description": "{{PROJECT_DESCRIPTION}}",
  "license": "GPL-2.0-or-later",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "{{AUTHOR_NAME}}",
      "email": "{{AUTHOR_EMAIL}}"
    }
  ],
  "require": {
    "php": ">=7.4",
    "wpmoo/wpmoo": "*"
  },
  "require-dev": {
    "wpmoo/wpmoo-cli": "dev-dev",
    "wpmoo/wpmoo-coding-standards": "dev-main"
  },
  "repositories": [
    {
      "type": "path",
      "url": "{{PATH_TO_WPMOO}}"
    },
    {
      "type": "path",
      "url": "{{PATH_TO_WPMOO_CLI}}"
    },
    {
      "type": "path",
      "url": "{{PATH_TO_WPMOO_CODING_STANDARDS}}"
    }
  ],
  "autoload": {
    "psr-4": {
      "{{NAMESPACE}}\\": "src/"
    }
  },
  "scripts": {
    "setup-wrapper": "php vendor/wpmoo/wpmoo-cli/scripts/generate-moo-wrapper.php",
    "post-install-cmd": [
      "@setup-wrapper"
    ],
    "post-update-cmd": [
      "@setup-wrapper",
      "php moo update"
    ]
  }
}